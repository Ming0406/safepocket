<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kotlin.safepocket">

    <application
        android:name=".helper.SafePocketApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity
            android:screenOrientation="user"
            android:theme="@style/AppTheme.FullScreen"
            android:name=".activities.IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.PatternLockActivity" android:label="" android:theme="@style/AppTheme.NoActionBar" android:screenOrientation="user" />
        <activity android:name=".activities.SecuritySelectionActivity" android:label="" android:theme="@style/AppTheme.NoActionBar" android:screenOrientation="user" />
        <activity android:name=".activities.SecurityDetailActivity" android:label="" android:theme="@style/AppTheme.NoActionBar" android:screenOrientation="user"/>
        <activity android:name=".activities.SecurityEditActivity" android:label="" android:theme="@style/AppTheme.NoActionBar" android:windowSoftInputMode="adjustResize" android:screenOrientation="user" />
        <activity android:name=".activities.SecurityAddActivity" android:label="" android:theme="@style/AppTheme.NoActionBar" android:windowSoftInputMode="adjustResize" android:screenOrientation="user" />
        <activity android:name=".activities.CustomizationActivity" android:label="" android:theme="@style/AppTheme.NoActionBar" android:screenOrientation="user" />

    </application>

</manifest>