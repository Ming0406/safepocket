<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp">
        <TextView
            android:text="BAD"
            style="@style/text_view_strength_label" />
        <ImageView
            android:id="@+id/level1"
            android:background="@color/strength_bad"
            style="@style/image_view_strength_level" />
        <ImageView
            android:id="@+id/level2"
            style="@style/image_view_strength_level" />
        <ImageView
            android:id="@+id/level3"
            style="@style/image_view_strength_level" />
        <ImageView
            android:id="@+id/level4"
            style="@style/image_view_strength_level" />
        <ImageView
            android:id="@+id/level5"
            style="@style/image_view_strength_level" />
        <TextView
            android:text="GOOD"
            android:textColor="@color/strength_good"
            style="@style/text_view_strength_label" />
    </LinearLayout>
</layout>